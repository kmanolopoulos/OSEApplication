<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".TimesheetActivity">

    <TextView
        android:id="@+id/txt_search_station_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_search_station_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alexandroupoli" />

    <TextView
        android:id="@+id/txt_search_station_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_search_time_from"
        app:layout_constraintStart_toEndOf="@id/txt_search_station_from"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from"
        tools:text="Thessaloniki" />

    <TextView
        android:id="@+id/txt_search_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_search_time_to"
        app:layout_constraintStart_toEndOf="@id/txt_search_station_to"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from"
        tools:text="XX:XX" />

    <TextView
        android:id="@+id/txt_search_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/img_search_icon"
        app:layout_constraintStart_toEndOf="@id/txt_search_time_from"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from"
        tools:text="XX:XX" />

    <ImageView
        android:id="@+id/img_search_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/ose_logo_1200px"
        app:layout_constraintStart_toEndOf="@id/txt_search_time_to"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from" />

</androidx.constraintlayout.widget.ConstraintLayout>

