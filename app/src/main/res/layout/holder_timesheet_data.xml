<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:context=".timesheet.TimesheetActivity">

    <TextView
        android:id="@+id/txt_search_station_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_search_station_to"
        app:layout_constraintHorizontal_weight="@dimen/timesheet_station_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_search_station_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_search_time_from"
        app:layout_constraintHorizontal_weight="@dimen/timesheet_station_weight"
        app:layout_constraintStart_toEndOf="@id/txt_search_station_from"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from" />

    <TextView
        android:id="@+id/txt_search_time_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/txt_search_time_to"
        app:layout_constraintHorizontal_weight="@dimen/timesheet_time_weight"
        app:layout_constraintStart_toEndOf="@id/txt_search_station_to"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from" />

    <TextView
        android:id="@+id/txt_search_time_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/img_search_icon"
        app:layout_constraintHorizontal_weight="@dimen/timesheet_time_weight"
        app:layout_constraintStart_toEndOf="@id/txt_search_time_from"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from" />

    <ImageView
        android:id="@+id/img_search_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:rotation="90"
        android:src="@drawable/link_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_search_time_to"
        app:layout_constraintTop_toTopOf="@id/txt_search_station_from" />

</androidx.constraintlayout.widget.ConstraintLayout>

